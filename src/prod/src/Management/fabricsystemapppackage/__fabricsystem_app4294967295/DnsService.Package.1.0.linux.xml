<?xml version="1.0" encoding="utf-8"?>
<ServicePackage 
    xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    Name="DnsService" 
    ManifestVersion="Current" 
    RolloutVersion="1.0" 
    xmlns="http://schemas.microsoft.com/2011/01/fabric">
    <Description>A Microsoft Azure Service Fabric system service for DNS</Description>
    <DigestedServiceTypes RolloutVersion="1.0">
        <ServiceTypes>
            <StatelessServiceType ServiceTypeName="DnsServiceType" />
        </ServiceTypes>
    </DigestedServiceTypes>
    <DigestedCodePackage RolloutVersion="1.0">
        <CodePackage Name="Code" Version="Current">
            <EntryPoint>
                <ExeHost>
                    <Program>FabricDnsService.exe</Program>
                </ExeHost>
            </EntryPoint>
        </CodePackage>
        <!-- 
        By default, services run as sfuser (LocalUser). DNS service needs to run as root on 
        Linux platform so as to bind to DNS port 53 (privileged). Hence, DnsUser is mapped to 
        LocalSystem (root). 
        --> 
        <RunAsPolicy CodePackageRef="Code" UserRef="DnsUser"/>
    </DigestedCodePackage>
    <DigestedResources RolloutVersion="1.0">
      <DigestedEndpoints>
      </DigestedEndpoints>
    </DigestedResources>
  <Diagnostics />
</ServicePackage>
