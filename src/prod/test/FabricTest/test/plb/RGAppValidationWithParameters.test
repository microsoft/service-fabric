verifyresourceonnode 30 servicefabric:/_CpuCores 0
verifyresourceonnode 10 servicefabric:/_MemoryInMB 356
verifyresourceonnode 20 servicefabric:/_MemoryInMB 356
verifyresourceonnode 30 servicefabric:/_MemoryInMB 356

verifyclusterload servicefabric:/_CpuCores 0 0 0 -1
verifyclusterload servicefabric:/_MemoryInMB 1068 356 356 -1

verifyplbandlrmsync

deleteapp fabric:/okMemApp2
unprovisionapp AppMemory2 vRTM2

!q