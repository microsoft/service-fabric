{
    "name": "SampleCluster",
    "clusterConfigurationVersion": "2.0.0",
    "apiVersion": "08-2017",
    "nodes": [
        {
            "nodeName": "vm0",
            "iPAddress": "localhost",
            "nodeTypeRef": "NodeType0",
            "faultDomain": "fd:/dc1/r0",
            "upgradeDomain": "UD0"
        },
        {
            "nodeName": "vm1",
            "iPAddress": "localhost",
            "nodeTypeRef": "NodeType1",
            "faultDomain": "fd:/dc1/r1",
            "upgradeDomain": "UD1"
