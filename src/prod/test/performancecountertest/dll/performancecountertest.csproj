    <AssemblyName>PerformanceCounterTest.Test</AssemblyName>
    <AssemblyClsCompliant>false</AssemblyClsCompliant>
    <RootNamespace>Microsoft.Service.Fabric.CIT.PerformanceCounter</RootNamespace>
